spring:
    jpa:
        database-platform: org.hibernate.dialect.PostgreSQLDialect
        hibernate.ddl-auto: update
        open-in-view: false
    datasource:
        url: jdbc:postgresql://proseo-db:5432/proseo
        username: postgres
        password: ********
logging:
    level:
        root: INFO
        de.dlr.proseo: TRACE
proseo:
    defaultuser.name: sysadm
    defaultuser.password: sysadm
    wrapper:
        user: wrapper
        password: somepw
    userManager:
        url: http://localhost:8086/proseo/user-mgr/v0.1
    orderManager:
        url: http://localhost:8082/proseo/order-mgr/v0.1
    processorManager:
        url: http://localhost:8084/proseo/processor-mgr/v0.1
    productClassManager:
        url: http://localhost:8085/proseo/productclass-mgr/v0.1
    productionPlanner:
        # Callback URL for Wrapper
        url: http://brainhost:8080/proseo/planner/v0.1
        user: wrapper
        password: somepw
        maxcycles: 50
        # time in milliseconds
        cyclewaittime: 1000
        # run once if <= 0 (at startup)
        dispatcherwaittime: 0
    storageManager:
        url: http://localhost:8001/proseo/storage-mgr/v0.1
        user: wrapper
        password: ingest&plan
    ingestor:
        url: http://brainhost:8080/proseo/ingestor/v0.1
        user: wrapper
        password: somepw
    global:
      storageIdPrefix: proseo
    procFacility:
      name: devel
      url: http://localhost:9887/k8s-api-endpoint
      descr: local env :-)
    s3:
      s3AccessKey: XXXX
      s3SecretAccessKey: XXXX
      s3EndPoint: https://localhost:9000
      s3Region: eu-de
      s3DefaultBucket: proseo-data-001
      s3MaxNumberOfBuckets: 50
    alluxio:
      alluxioUnderFsS3Bucket: internal
      alluxioUnderFsS3BucketPrefix: underfs
      alluxioUnderFsS3BucketEndPoint: http://localhost:9000
      alluxioUnderFsMaxPrefixes: 500
      alluxioUnderFsDefaultPrefix: proseo-alluxio-cache
    posix:
      mountPoint: /mnt/proseodata
    joborder:
      bucket: internal
      prefix: joborders
    mountpoints:
     #ALLUXIO-properties are only used for answering GET-requests on endpoint /info
      alluxio:
        k8sNode:
          alluxioCache: /mnt/alluxio
          alluxioFuse: /alluxio-fuse
      #Required for handling a mounted storage-appliance, available at every k8s-Node as POSIX-mountpoint
      unregisteredProducts:
        k8sNode:
          unregisteredProducts: /mnt/some-dir
