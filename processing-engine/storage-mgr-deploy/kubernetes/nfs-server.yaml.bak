---
# The prosEO File System Cache service
kind: Service
apiVersion: v1
metadata:
  name: proseo-nfs-server
spec:
  ports:
    - name: nfs
      port: 2049
    - name: mountd
      port: 20048
    - name: rpcbind
      port: 111
  selector:
    role: proseo-nfs-server

---
# The File System Cache pod (only one!)
apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: proseo-nfs-server
spec:
  replicas: 1
  selector:
    matchLabels:
      role: proseo-nfs-server
  template:
    metadata:
      labels:
        role: proseo-nfs-server
    spec:
      hostname: proseo-nfs-server
      containers:
      - name: proseo-nfs-server
        image: k8s.gcr.io/volume-nfs:0.8
        ports:
        - name: nfs
          containerPort: 2049
        - name: mountd
          containerPort: 20048
        - name: rpcbind
          containerPort: 111
        securityContext:
          privileged: true
        volumeMounts:
        - name: mnt
          mountPath: /exports
      volumes:
      - name: mnt
        persistentVolumeClaim:
          claimName: nfs-pv-provisioning-demo
      restartPolicy: Always
      dnsPolicy: ClusterFirstWithHostNet
      hostNetwork: true
      
---
# Persistent volume provided by Kubernetes
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: nfs-pv-provisioning-demo
  labels:
    demo: nfs-pv-provisioning
spec:
  accessModes: [ "ReadWriteOnce" ]
  resources:
    requests:
      storage: 300Gi