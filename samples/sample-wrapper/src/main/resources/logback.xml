<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="IPF_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS} sample-wrapper 2.0.0-SNAPSHOT: [%1.-1level] %msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
        <encoder>
            <pattern>${IPF_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>${IPF_PATTERN}</pattern>
        </encoder>
        <target>System.err</target>
    </appender>
    
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/proseo/log/proseo-sample-wrapper.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>/proseo/log/%d{yyyy-MM,aux}/proseo-sample-wrapper.%d{yyyy-MM-dd}.log</fileNamePattern>
            
            <!-- keep 90 days' worth of history -->
            <maxHistory>90</maxHistory>
        </rollingPolicy>
    </appender>
    
    <logger name="software.amazon.awssdk" level="ERROR"/>
    <logger name="de.dlr.proseo" level="TRACE"/>
    
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="STDERR" />
        <appender-ref ref="FILE" />
    </root>
</configuration>